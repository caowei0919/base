<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H100"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_paramName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/c_303030"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/W25">
    </TextView>

    <TextView
        android:id="@+id/tv_paramValue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textColor="@color/c_303030"
        android:textSize="14sp"
        android:drawablePadding="@dimen/W28"
        android:layout_marginRight="@dimen/W25"
        android:drawableRight="@mipmap/account_next">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_f2f2f2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/W25"
        android:layout_marginRight="@dimen/W25">
    </TextView>
</RelativeLayout>