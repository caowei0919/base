<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/H100">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/W40"
        android:textSize="14sp"
        android:textColor="@color/c_808080">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tv_time"
        android:layout_marginLeft="@dimen/W20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_orgDimension"
            android:layout_width="@dimen/W1"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/c_808080"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/tv_areaLine"
            android:layout_width="@dimen/W2"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/H34"
            android:layout_marginBottom="@dimen/H34"
            android:background="@color/c_17263b"
            android:layout_marginLeft="@dimen/W20">
        </TextView>

        <TextView
            android:id="@+id/tv_areaDimension"
            android:layout_width="@dimen/W1"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/W20"
            android:textColor="@color/c_808080"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/tv_proLine"
            android:layout_width="@dimen/W2"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/H34"
            android:layout_marginBottom="@dimen/H34"
            android:background="@color/c_17263b"
            android:layout_marginLeft="@dimen/W20">
        </TextView>

        <TextView
            android:id="@+id/tv_proDimension"
            android:layout_width="@dimen/W1"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/W20"
            android:textColor="@color/c_808080"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:layout_width="@dimen/W2"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/H34"
            android:layout_marginBottom="@dimen/H34"
            android:layout_marginRight="@dimen/W20">
        </TextView>
    </LinearLayout>
</RelativeLayout>