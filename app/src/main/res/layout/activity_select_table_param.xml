<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF"
    android:orientation="vertical">

    <include android:id="@+id/title"
        layout="@layout/actionbar_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/H2"
        android:background="@color/c_d8d8d8">
    </TextView>

    <RelativeLayout
        android:id="@+id/rel_typeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_typeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_choose_time"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/W40"
            android:layout_marginTop="@dimen/H20"
            android:textColor="@color/c_000000">
        </TextView>

        <TextView
            android:id="@+id/tv_timeTitleOfOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/W50"
            android:layout_below="@id/tv_typeTime"
            android:layout_marginTop="@dimen/H20"
            android:textColor="@color/c_000000"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/tv_timeOfOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W40"
            android:layout_below="@id/tv_typeTime"
            android:layout_marginTop="@dimen/H20"
            android:drawablePadding="@dimen/W40"
            android:drawableRight="@mipmap/account_next"
            android:paddingLeft="@dimen/W40"
            android:textSize="18sp"
            android:textColor="@color/c_000000">
        </TextView>

        <TextView
            android:id="@+id/tv_timeTitleOfTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/W50"
            android:layout_below="@id/tv_timeOfOne"
            android:layout_marginTop="@dimen/H20"
            android:textColor="@color/c_000000"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/tv_timeOfTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/W40"
            android:layout_below="@id/tv_timeOfOne"
            android:layout_marginTop="@dimen/H20"
            android:drawablePadding="@dimen/W40"
            android:drawableRight="@mipmap/account_next"
            android:paddingLeft="@dimen/W40"
            android:textSize="18sp"
            android:textColor="@color/c_000000">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/H2"
            android:layout_below="@id/tv_timeOfTwo"
            android:background="@color/c_d8d8d8"
            android:layout_marginLeft="@dimen/W50"
            android:layout_marginRight="@dimen/W50"
            android:layout_marginTop="@dimen/H20">
        </TextView>
    </RelativeLayout>
</LinearLayout>