<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_round_white"
    android:paddingTop="@dimen/H30" >

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/W20"
        android:layout_marginRight="@dimen/W20"
        android:minWidth="@dimen/W200"
        android:layout_gravity="center"
        android:textAppearance="@style/style_item_font_15"
        android:textColor="@color/c_343434" />

    <Button
        android:id="@+id/btnPositive"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/W26"
        android:background="@drawable/navigation_bar_ripple_bg"
        android:minHeight="@dimen/H1"
        android:minWidth="@dimen/W1"
        android:paddingBottom="@dimen/H12"
        android:paddingLeft="@dimen/W12"
        android:paddingRight="@dimen/W12"
        android:paddingTop="@dimen/H12"
        android:layout_marginTop="@dimen/H12"
        android:layout_marginRight="@dimen/W20"
        android:text="@string/confirm"
        android:textColor="@color/c_FF5592F4"
        android:textSize="12sp"
        android:layout_gravity="right"/>

</LinearLayout>
