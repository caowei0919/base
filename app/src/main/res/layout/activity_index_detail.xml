<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:background="@color/c_FFFFFF"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/title"
            layout="@layout/actionbar_title"/>

        <TextView
            android:id="@+id/tv_indexName"
            android:layout_marginTop="@dimen/H20"
            android:textColor="@color/c_000000"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/W20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/H400"
            android:layout_marginTop="@dimen/H20">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/H2"
            android:background="@color/c_d8d8d8"
            android:layout_marginLeft="@dimen/W20"
            android:layout_marginRight="@dimen/W20"
            android:layout_marginTop="@dimen/H20">
        </TextView>

        <RelativeLayout
            android:id="@+id/rel_target"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H150"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/W20"
            android:layout_marginRight="@dimen/W20">
            <TextView
                android:id="@+id/tv_target"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/W20"
                android:layout_marginRight="@dimen/W20">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/H2"
                android:background="@color/c_d8d8d8"
                android:layout_alignParentBottom="true">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_challenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H150"
            android:layout_marginLeft="@dimen/W20"
            android:visibility="gone"
            android:layout_marginRight="@dimen/W20">
            <TextView
                android:id="@+id/tv_challenge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/W20"
                android:layout_marginRight="@dimen/W20">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/H2"
                android:background="@color/c_d8d8d8"
                android:layout_alignParentBottom="true">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_guaranteed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/H150"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/W20"
            android:layout_marginRight="@dimen/W20">
            <TextView
                android:id="@+id/tv_guaranteed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/W20"
                android:layout_marginRight="@dimen/W20">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/H2"
                android:background="@color/c_d8d8d8"
                android:layout_alignParentBottom="true">
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/W40"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/W20"
            android:minHeight="@dimen/H150">
        </TextView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>