<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/W300"
    android:background="@color/c_FFFFFF"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_indexName"
        android:layout_width="@dimen/W250"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/c_999999"
        android:layout_marginTop="@dimen/H12"
        android:layout_marginLeft="@dimen/W20">
    </TextView>

    <TextView
        android:id="@+id/tv_valueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_000000"
        android:layout_marginLeft="@dimen/W20"
        android:layout_marginTop="@dimen/H14"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/H20"
        android:layout_below="@id/tv_indexName">
    </TextView>

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_valueName"
        android:layout_below="@id/tv_indexName"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/H14"
        android:layout_marginLeft="@dimen/W50">
    </TextView>

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:button="@null"
        android:background="@null"
        android:layout_toRightOf="@id/tv_indexName"
        android:padding="@dimen/W10"
        android:drawableLeft="@drawable/selector_check"
        android:paddingLeft="@dimen/W1"
        android:textSize="13sp"
        android:textColor="@color/c_666666">
    </CheckBox>
</RelativeLayout>