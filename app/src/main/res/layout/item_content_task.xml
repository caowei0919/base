<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_createName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_000000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/W40">
    </TextView>

    <TextView
        android:id="@+id/tv_createTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/H32"
        android:layout_below="@id/tv_createName"
        android:layout_alignLeft="@id/tv_createName"
        android:textColor="@color/c_b5b5b5"
        android:textSize="13sp">
    </TextView>

    <TextView
        android:id="@+id/tv_endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/H8"
        android:layout_below="@id/tv_createTime"
        android:layout_alignLeft="@id/tv_createName"
        android:textColor="@color/c_b5b5b5"
        android:textSize="13sp">
    </TextView>
</RelativeLayout>